node {

    def commit_id

    stage('Preparation') {

        checkout scm

        sh "git rev-parse --short HEAD' > .git/commit_id"
        commit_id = readFile(.git/commit_id).trim()

    }

    stage('test') {

        nodejs(nodeJsInstalationName: 'nodejs') {
            sh 'npm install --only=dev'
            sh 'npm test'
        }
    }

}